<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="VueAppTestSuite_ForPriceComponents" verbose="2"
       parallel="false">

    <test name="chrome tests" parallel="false">
        <parameter name="browser" value="chrome"/>
        <parameter name="property_file" value="global.properties" />
        <classes>
            <class name="tests.PriceComponentsTests">
                <methods>
                    <include name="changeBasePrice_positiveTest"/>
                    <include name="addAllPriceComponents_positiveTest"/>
                    <include name="removePriceComponent_positiveTest"/>
                    <include name="editNameComponent_positiveTest"/>
                    <include name="editNegativePriceComponent_positiveTest"/>
                    <include name="editPositivePriceComponent_positiveTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="firefox tests" parallel="false">
        <parameter name="browser" value="firefox"/>
        <parameter name="property_file" value="global.properties" />
        <classes>
            <class name="tests.PriceComponentsTests">
                <methods>
                    <include name="changeBasePrice_positiveTest"/>
                    <include name="addAllPriceComponents_positiveTest"/>
                    <include name="removePriceComponent_positiveTest"/>
                    <include name="editNameComponent_positiveTest"/>
                    <include name="editNegativePriceComponent_positiveTest"/>
                    <include name="editPositivePriceComponent_positiveTest"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>